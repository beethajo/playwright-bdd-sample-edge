{
  "name": "playwright-bdd-example",
  "version": "0.1.0",
  "type": "commonjs",
  "scripts": {
    "test": "npx bddgen && npx playwright test --grep @homePageVideo --project chromium --workers=1",
    "watch:bdd": "nodemon -w ./features -w ./steps -e feature,js,ts --exec \"npx bddgen\"",
    "codegen": "npx playwright codegen https://www.lrqa.com/en-gb/",
    "watch:pw": "playwright test --ui",
    "watch": "run-p watch:*",
    "test:e2e": "cross-env playwright install --force chrome",
    "report": "npx http-server ./cucumber-report -c-1 -o index.html"
  },
  "devDependencies": {
    "@playwright/test": "1.49",
    "@types/node": "^20.9.4",
    "cross-env": "^7.0.3",
    "http-server": "14.1.1",
    "nodemon": "3.1.7",
    "npm-run-all": "^4.1.5",
    "playwright-bdd": "^7.5.0",
    "typescript": "5.6.2",
    "prettier": "^3.0.3"
  },
  "dependencies": {
    "@cucumber/cucumber": "^11.1.0",
    "cucumber": "^6.0.7",
    "playwright": "^1.49.1",
    "pnpm": "^10.8.1",
    "winston": "^3.17.0"
  }
}
